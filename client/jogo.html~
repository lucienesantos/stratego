<script type="text/javascript">
  $(function(){
    $("#chat").click(function(){
      $("#chat-window").show().removeClass("bounceOutDown").addClass("bounceInUp");
    });
    $(".close").click(function(){
      $("#chat-window").removeClass("bounceInUp").addClass("bounceOutDown");
    });
    $(".input-chat").keypress(function(e){
      if (e.charCode == 13) {        
        Comunication.sendMessage($(this).val());
        $(this).val("");
      }
    });
  });
</script>
